<UserControl x:Class="MicroFlasher.Views.SerialMonitor.MonitorToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:commands="clr-namespace:MicroFlasher.Commands"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="650">
    <ToolBarTray Orientation="Horizontal">
        <ToolBar>
            <Button Command="commands:FlasherCommands.ResetDevice">
                <StackPanel>
                    <Image Source="../../Icons/reset.png" />
                    <TextBlock>Reset</TextBlock>
                </StackPanel>
            </Button>
          
        </ToolBar>
       
    </ToolBarTray>

</UserControl>
